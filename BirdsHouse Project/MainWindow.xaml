<Window x:Class="BirdsHouse_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BirdsHouse_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="500" 
        Background="WhiteSmoke"
        >
    <Grid>
        <TextBox Name="uName" BorderThickness="0" HorizontalAlignment="Left" Margin="287,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="131" Height="27"/>
