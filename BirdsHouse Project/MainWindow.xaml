        <Label Content="User Name" HorizontalAlignment="Left" Margin="212,62,0,0" VerticalAlignment="Top" Height="27" Width="75"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="212,111,0,0" VerticalAlignment="Top" Height="27" Width="61"/>
        <Button Content="Submit" Name="Submit_btn" HorizontalAlignment="Left" Margin="368,168,0,0" VerticalAlignment="Top" Height="22" Width="50" Click="Submit_btn_Click"/>
        <Button Content="Sign-Up" Name="SignUp_btn" HorizontalAlignment="Left" Margin="287,168,0,0" VerticalAlignment="Top" Height="22" Width="57"/>
        <Image Source="/login-image.png"  Margin="23,75,227,-23" Width="250"/>

    </Grid>
</Window>
